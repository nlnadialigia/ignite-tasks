{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": ["src/", "tsconfig-paths.js"],
  "exclude": ["**/node_modules/**", "build/**", "src/local/**"],
  "compileOnSave": true
}
